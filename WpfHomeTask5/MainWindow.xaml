<Window x:Class="WpfHomeTask5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHomeTask5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="664.773">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="164*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnGenerate" Content="Создать" HorizontalAlignment="Left" Margin="10,231,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="btnGenerate_Copy" Content="Создать" HorizontalAlignment="Left" Margin="163,231,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="lName" Content="Имя" Grid.Column="1" HorizontalAlignment="Left" Margin="10.6,231,0,0" VerticalAlignment="Top" Height="27" Width="94" FontSize="14"/>
        <Label x:Name="lLastName" Content="Фамилия" Grid.Column="1" HorizontalAlignment="Left" Margin="10.6,263,0,0" VerticalAlignment="Top" Height="27" Width="94" FontSize="14"/>
        <Label x:Name="lAge" Content="Возраст" Grid.Column="1" HorizontalAlignment="Left" Margin="10.6,295,0,0" VerticalAlignment="Top" Height="27" Width="94" FontSize="14"/>
        <Label x:Name="lDep" Content="Департамент" Grid.Column="1" HorizontalAlignment="Left" Margin="10.6,327,0,0" VerticalAlignment="Top" Height="27" Width="94" FontSize="14"/>
        <ListView x:Name="lvEmployee" Grid.Column="1" HorizontalAlignment="Stretch" Height="213" Margin="10,10,10,10" VerticalAlignment="Top"  SelectedIndex="0" SelectionChanged="lvEmployee_SelectionChanged">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="cmi_change" Header="Переместить в ..." Command="{Binding AddNewItem}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}}" GotFocus="cmi_change_GotFocus" ></MenuItem>
                    <MenuItem Name="cmi_remove" Header="Удалить" Command="{Binding RemoveItem}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, 
                     Path=PlacementTarget.SelectedItem}" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=FirstName}">Имя</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=LastName}">Фамилия</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Age}">Возраст</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Department}">Департамент</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lvDepartment" HorizontalAlignment="Stretch" Height="213" Margin="10,10,10,10" VerticalAlignment="Top" SelectionChanged="lvDepartment_SelectionChanged" SelectedIndex="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Department}">Департамент</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="tbName" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="108.6,231,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="129" FontSize="14"/>
        <TextBox x:Name="tbLastName" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="108.6,263,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Width="129" FontSize="14"/>
        <TextBox x:Name="tbAge" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="108.6,295,0,0" TextWrapping="Wrap" Text="Возраст" VerticalAlignment="Top" Width="129" FontSize="14"/>
        <TextBox x:Name="tbDep" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="108.6,327,0,0" TextWrapping="Wrap" Text="Департамент" VerticalAlignment="Top" Width="129" FontSize="14"/>
        <Button x:Name="btChange" Content="Изменить" Grid.Column="1" HorizontalAlignment="Left" Margin="120.6,376,0,0" VerticalAlignment="Top" Width="75" Click="btChange_Click"/>

    </Grid>
</Window>
